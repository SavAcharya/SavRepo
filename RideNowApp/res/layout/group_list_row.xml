<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:minHeight="70dp"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:id="@+id/ic_text_username__"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:singleLine="true"
        android:layout_toRightOf="@+id/ic_newrork_user_thumb"
        android:paddingLeft="15dp"
        android:textSize="18sp"
        android:text="Manoj Prasad Mumbai, Maharastra"
        android:textColor="@color/home_bg_color" />

    <ImageView
        android:id="@+id/ic_img_tickmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/blue_checkmark" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:background="@color/grey_text_color" />

    <ImageView
        android:id="@+id/ic_newrork_user_thumb"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/ic_btn_to" 
        android:src="@drawable/ic_btn_to"/>

</RelativeLayout>